<h1>Add new products to sell on our site</h1>

<div class="add_form">

<%= form_tag "/products", method: :post do %>
  <div class="form-group">
    <label for="name">Product Name</label>
    <input type="text" class="form-control" id="name" placeholder="Name goes here" name="name">
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Price goes here" name="price">
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Image url goes here" name="image">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Description goes here" name="description">
  </div>
  
  
  <button type="submit" class="btn btn-default">Submit</button>
<% end %>
</div>
</div> 








